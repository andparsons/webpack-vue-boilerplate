.hello
  .item_label
   | {{environment}}
  a.refresh(href='/', @click.prevent='reload()') Refresh
  .container
    ul
      li
        input#g_all(type='radio', v-model='gender', value='all')
        label#g_all(for='g_all') All
        .check
      li
        input#g_male(type='radio', v-model='gender', value='male')
        label#g_male(for='g_male') Male
        .check
      li
        input#g_female(type='radio', v-model='gender', value='female')
        label#g_female(for='g_female') Female
        .check
  ul.bob(v-show='!pending')
    li(v-for='person in filteredPeople')
      .item
        img.item_avatar(:src='person.picture.thumbnail', v-bind:class="[person.gender === 'male' ? 'male' : 'female']")
        .item_label
          | {{person.name.first | capitalize}} {{person.name.last.toUpperCase()}}
